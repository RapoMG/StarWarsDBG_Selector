<PlayersWindow>
    name: "p_number"

    FloatLayout:
        #Call Background object
        Background:

        Label:
            text: "Players"
            pos_hint: {"center_y":.7, "center_x":0.38}
            font_size: 56
            outline_color: (0, 0, 0)
            outline_width: 1

        Label:
            id: n_players
            text: root.nbr_plyrs
            font_size: 56
            bold: True
            outline_color: (0.855, 0.361, 1)
            outline_width: 2
            pos_hint: {"center_y":.7, "center_x":0.73}

        Button:
            text: "+"
            bold: True
            pos_hint: {"center_y":.77, "center_x":0.73}
            on_press: root.incr()

        Button:
            text: "-"
            bold: True
            pos_hint: {"center_y":.63, "center_x":0.73}
            on_press: root.decr()

        Next:
            text: "That is... acceptable"
            on_release:
                app.root.current = "factions"
                root.players()

